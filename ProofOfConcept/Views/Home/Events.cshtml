@using System.Net
@using ProofOfConcept.CrmWebApiIntegration.Model
@model IEnumerable<ConnectionEventModel>
@{
    ViewBag.Title = "Proof of Concept - List Connection Events from CRM Web API";
    Layout = "_Layout";
    var opaqueness = 0;
}

<style>
    .events-list {
        font-family: arial;
        font-size: 15px;
        text-align: left;
        margin-left: 30%;
        font-variant: normal;
    }
</style>
<h2>Proof of Concept - List Connection Events from CRM Web API</h2>
<h2>@Html.ActionLink("Add","AddEvent", "Home")</h2>

@foreach (var connectionEvent in Model)
{
    opaqueness += 20;
    var rgb = String.Format("rgb({0},{0},{0})", opaqueness.ToString());

    <div class="events-list" style="color: @rgb">
        <br />
        <p>Id: @connectionEvent.wnsl_eventid</p>
        <p>Name: @connectionEvent.wnsl_name</p>
        <p>Created On: @connectionEvent.createdon</p>
    </div>
}
